<Window x:Class="WitteGijUtKwis.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="images/logo.jpeg"
        ResizeMode="NoResize"
        Title="Login" Height="205" Width="350">
    <Grid>
        <Label x:Name="Username" Content="Spelersnaam" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Txt_Username" HorizontalAlignment="Center" Height="27" Margin="0,35,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="300" MaxLength="20"/>
        <Label x:Name="Password" Content="Wachtwoord" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="Txt_Password" PasswordChar="*" HorizontalAlignment="Center" Height="27" Margin="0,90,0,0" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="300" MaxLength="15"/>
        <Button x:Name="Btn_Register" Content="Registreer" HorizontalAlignment="Left" Height="30" Margin="20,130,0,0" VerticalAlignment="Top" Width="135" Click="Btn_Register_OnClick"/>
        <Button x:Name="Btn_Login" Content="Login" HorizontalAlignment="Right" Height="30" Margin="0,130,20,0" VerticalAlignment="Top" Width="135" Click="Btn_Login_OnClick"/>

    </Grid>
</Window>
